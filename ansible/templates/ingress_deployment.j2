apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ app_name }}-deployment
  labels:
    app: {{ app_name }}
spec:
  replicas: {{ replicas | default(1) }}
  selector:
    matchLabels:
      app: {{ app_name }}
  template:
    metadata:
      labels:
        app: {{ app_name }}
    spec:
      containers:
      - name: {{ app_name }}
        image: nginxdemos/nginx-hello:latest
        ports:
        - containerPort: 8080
---
apiVersion: v1
kind: Service
metadata:
  name: {{ app_name }}-svc
spec:
  selector:
    app: {{ app_name }}
  ports:
    - protocol: TCP
      port: 80
      targetPort: 8080
      name: http
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  {% if tls_hosts is defined %}
  annotations:
    cert-manager.io/cluster-issuer: {{ cluster_issuer_name }}
  {% endif %}
  name: {{ app_name }}-ingress
spec:
  ingressClassName: nginx
  {% if tls_hosts is defined %}
  tls:
    - hosts:
      {% for item in tls_hosts %}
      - {{ item }}
      {% endfor %}
      secretName: {{ app_name }}-cert
  {% endif %}
  rules:
  {% for item in tls_hosts | default(hosts) %}
  - host: {{ item }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: {{ app_name }}-svc
            port:
              number: 80
  {% endfor %}
